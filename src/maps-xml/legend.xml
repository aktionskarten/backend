<Map srs="+init=epsg:3857">
  <Style name="legend">
      <Rule>
          <Filter>[type] = 'copyright'</Filter>
          <TextSymbolizer dx="-32" dy="-32" placement="point" vertical-alignment="top" horizontal-alignment="left" size="20" fill="grey" halo-fill="white" halo-radius="1" face-name="DejaVu Sans Bold" allow-overlap="true">
            [text]
          </TextSymbolizer>
      </Rule>
      <Rule>
          <Filter>not ([name] = null)</Filter>
          <TextSymbolizer dx="30" dy="30" wrap-width="1500" placement="point" vertical-alignment="bottom" horizontal-alignment="right" size="60" fill="red" halo-fill="black" halo-radius="2" face-name="DejaVu Sans Bold" allow-overlap="true">
            [name] + "\n"
            <Format size="24" line-spacing="20">[date]</Format>
            <Format size="24" line-spacing="20">" @ "</Format>
            <Format size="24" line-spacing="20">[place]</Format>
          </TextSymbolizer>
      </Rule>
      <Rule>
          <TextSymbolizer placement="point" vertical-alignment="top" horizontal-alignment="right" size="16" fill="black" halo-fill="white" halo-radius="1" face-name="DejaVu Sans Bold" allow-overlap="true">
              <Layout>[key]</Layout>
              <Layout dx="150">[value]</Layout>
          </TextSymbolizer>
      </Rule>
  </Style>
  <Layer name="layer" clear-label-cache="on">
      <StyleName>legend</StyleName>
      <Datasource>
          <Parameter name="type">geojson</Parameter>
          <Parameter name="inline"><![CDATA[{}]]></Parameter>
      </Datasource>
  </Layer>
</Map>
